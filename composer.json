{
  "name": "novatech/ncs-epp",
  "description": "ZACR Epp Library Extension",
  "type": "library",
  "license": "MIT",
  "version": "1.2",
  "authors": [
    {
      "name": "Bona Lukengu",
      "email": "bona.lukengu@ncs.co.za"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
    "ext-dom": "*",
    "ext-intl": "*",
    "struzik-vladislav/epp-client": "^2.3.3",
    "struzik-vladislav/epp-socket-connection": "^2.1",
    "laminas/laminas-config": "^3.8",
    "monolog/monolog": "2.9.1"
  },
  "require-dev": {
    "phpspec/prophecy": "^1.16",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpunit/phpunit": "^9.5",
    "slevomat/coding-standard": "^8.7",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Novatech\\Epp\\": "src/Epp/src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
